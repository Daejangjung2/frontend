<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.example.daejangjung2.feature.auth.signup.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".feature.auth.login.LoginActivity">

        <!-- Title: 아이디 찾기 -->
        <TextView
            android:id="@+id/tv_find_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="129dp"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Nickname Input -->
        <TextView
            android:id="@+id/tv_find_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:text="이메일로 찾기"
            app:layout_constraintTop_toBottomOf="@+id/tv_find_id"
            app:layout_constraintStart_toStartOf="@+id/tv_find_id"/>
        <EditText
            android:id="@+id/et_find_email"
            android:hint=" E-mail을 입력하세요."
            android:layout_width="355dp"
            android:layout_height="51dp"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:padding="12dp"
            android:paddingRight="100dp"
            android:background="@drawable/edittext_background"
            android:drawableLeft="@drawable/ic_email"
            app:layout_constraintStart_toStartOf="@+id/tv_find_email"
            app:layout_constraintTop_toBottomOf="@id/tv_find_email"/>



        <!-- Continue Button -->
        <Button
            android:id="@+id/btn_continue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="아이디 찾기"
            android:backgroundTint="@color/blue_468FF"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginHorizontal="23dp"
            android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
