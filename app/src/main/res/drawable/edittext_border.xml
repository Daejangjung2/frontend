<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 테두리 스타일 -->
    <solid android:color="#FFFFFF"/> <!-- 배경 색 (필요하면 제거 가능) -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- 테두리 두께 및 색상 설정 -->
    <corners android:radius="8dp"/> <!-- 모서리 둥글게 -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/> <!-- 내부 여백 설정 -->
</shape>
