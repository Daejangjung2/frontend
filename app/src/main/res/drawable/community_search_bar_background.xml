<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000"/>
            <corners android:radius="16dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="1dp"/>
            <size android:width="0dp" android:height="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/>
            <corners android:radius="16dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="1dp"/>
            <size android:width="0dp" android:height="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#30000000"/>
            <corners android:radius="16dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="1dp"/>
            <size android:width="0dp" android:height="0dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000"/>
            <corners android:radius="16dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="1dp"/>
            <size android:width="0dp" android:height="0dp"/>
        </shape>
    </item>

    <!-- 배경색과 그림자 -->
    <item android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
