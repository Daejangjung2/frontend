<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- splash 를 활용한 것: 스타일 이름은 고정이여야 함 -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white_FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="android:statusBarColor">@color/grey_F8F8F8</item>
        <item name="android:background">@drawable/gradient_background</item>
        <!-- splash 화면 이후 연결해줄 내 앱의 테마 스타일 -->
        <item name="postSplashScreenTheme">@style/Base.Theme.Daejangjung2</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Daejangjung2" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/vista_blue_469CFF</item>
        <item name="android:statusBarColor">@color/grey_F8F8F8</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorHighlight">@color/vista_blue_469CFF</item>
    </style>

    <style name="Theme.Daejangjung2" parent="Base.Theme.Daejangjung2" />
</resources>